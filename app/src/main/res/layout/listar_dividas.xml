<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#EEEEEE"
    >

    <!-- Preview and Next Month -->
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:background="#7CB7B7">
         <ImageButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/margem"
             android:src="@drawable/icone_left"
             android:onClick="previewMonth"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/mesSelecionado"
             android:textSize="10pt"
             android:textStyle="bold"
             android:textColor="#000000"
             android:gravity="center"
             android:enabled="false"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             />
        <ImageButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="@dimen/margem"
             android:src="@drawable/icone_right"
             android:layout_alignParentTop="true"
             android:layout_alignParentEnd="true"
            android:onClick="nextMonth"
            />
     </RelativeLayout>

    <!-- Table Header -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AADEE0"
        android:id="@+id/header">
        <TableRow
            android:layout_marginLeft="@dimen/margem"
            android:layout_marginRight="@dimen/margem">
            <TextView
                android:layout_column="1"
                android:layout_width="@dimen/largura_coluna_descricao"
                android:layout_height="wrap_content"
                android:text="Descricao"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_column="2"
                android:layout_width="@dimen/largura_coluna"
                android:layout_height="wrap_content"
                android:text="Valor"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_column="3"
                android:layout_width="@dimen/largura_coluna"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Vencimento"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_column="4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pago"
                android:textColor="#000000"
                android:textStyle="bold"
                />
        </TableRow>
    </TableLayout>

    <!-- Table Body -->
    <ListView
        android:id="@+id/lista_dividas"
        android:layout_width="match_parent"
        android:layout_height="150pt"
        android:background="#EEEEEE"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_below="@+id/header">
    </ListView>

    <!-- Footer-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!-- Saldo, Sub Total-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#AADEE0">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem"
                android:layout_marginRight="@dimen/margem">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:text="SUB TOTAL:"
                    android:textColor="#000000"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/total"
                    android:enabled="false"
                    android:textSize="8pt"
                    android:textColor="#000000"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem"
                android:layout_marginRight="@dimen/margem">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:text="SALDO:"
                    android:textColor="#000000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/saldo"
                    android:enabled="false"
                    android:textSize="8pt"
                    android:textColor="#000000"/>
            </TableRow>

        </TableLayout>
    </RelativeLayout>
</LinearLayout>