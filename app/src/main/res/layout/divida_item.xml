<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margem"
            android:layout_marginRight="@dimen/margem"
            android:id="@+id/row_item"
            android:background="#FEFEFE"
            >

            <!-- descrição -->
            <TextView
                android:layout_width="@dimen/largura_coluna_descricao"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:id="@+id/divida_descricao"
                android:textColor="#000000"
                />
            <!-- valor -->
            <TextView
                android:layout_width="@dimen/largura_coluna"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:id="@+id/divida_valor"
                android:textColor="#000000"
                />
            <!-- vencimento -->
            <TextView
                android:layout_width="@dimen/largura_coluna"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:id="@+id/divida_vencimento"
                android:gravity="center"
                android:textColor="#000000"
                />
            <!-- isPago -->
            <Switch
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:id="@+id/divida_isPago"
                android:gravity="center"
                />

        </TableRow>
    </TableLayout>
</ScrollView>